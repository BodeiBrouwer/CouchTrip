
<h3>{{country.name}}</h3>
<div class="social-media-box-outer">
<div class="social-media-box">

<div class="whatsapp-button">
  <a href="https://wa.me/?text=I%20am%20travelling%20to%20{{country.name}}%20on%20CouchTrip.%20Come%20join%20me%20for%20a%20movie%20night!%20https%3A%2F%2Fcouchtrip.herokuapp.com/%2F">WhatsApp</a>
</div>

<a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-size="large" data-text="I&#39;m travelling to {{country.name}} on CouchTrip! Come join me for a movie night!" data-url="https://couchtrip.herokuapp.com" data-hashtags="#CouchTrip" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/de_DE/sdk.js#xfbml=1&version=v8.0" nonce="clLRw3CI"></script><div class="fb-share-button" data-href="https://couchtrip.herokuapp.com/" data-layout="button" data-size="large"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fcouchtrip.herokuapp.com%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Teilen</a></div>

</div>
</div>

<div id="country-media-collection">

{{#each movies}}
  <div class="media-info">
    <h3>Movie</h3>
    <h4>{{this.title}}</h4>
    <img class="media-img" src="{{this.img}}" alt="{{this.title}} Poster">
    <p>{{this.description}}</p>
    <p class="rating">Rating on IMDB: {{this.rating}}</p>
  </div>
{{/each}}

{{#each books}}
  <div class="media-info">
    <h3>Book</h3>
    <h4>{{this.title}}</h4>
    <img class="media-img" src="{{this.img}}" alt="{{this.title}} Poster">
    <p><b>by {{this.author}}</b></p>
    <p class="block-with-text">{{this.description}}</p>
    <p class="rating">Rating on Google Books: {{this.rating}}</p>
  </div>
{{/each}}

</div>
<a href="/countries/{{country.name}}/add">
     <button type="submit" class="btn add-country-btn">Add to my trips</button>
</a>
